@model SimpliHR.Infrastructure.Models.ClientManagement.ClientSettingDTO


@{

    if (!String.IsNullOrEmpty(Model.FooterText))
    {
        <footer class="content-footer footer bg-footer-theme">
            <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column">
                <div class="mb-2 mb-md-0 pt-3">
                    ©
                    <script>
                        document.write(new Date().getFullYear());
                    </script>
                    @(Model.FooterText == null ? "All Rights Reserved by SimplyHR Solution LLP" : Model.FooterText)
                    <a href="@(Model.PoliciesLink == null ? "#" : Model.PoliciesLink)" class="footer-link me-4" target="_blank" style="margin-left:20px">Policies</a>
                    <a href="@(Model.DocumentLink == null ? "#" : Model.DocumentLink)" target="_blank" class="footer-link me-4">Documentation</a>
                    <a href="@(Model.SupportLink == null ? "#" : Model.SupportLink)" target="_blank" class="footer-link d-none d-sm-inline-block">Support</a>
                </div>
                <div>
                    <div class="small mb-1">Powered By</div>  <img src="../../ClientLogo/simpli-logo.png" width="108" height="äuto" alt="">
                </div>
            </div>
        </footer>

    }
    else
    {
        if (Model.ClientId == -1)
        {
            <footer class="content-footer footer bg-footer-theme">
                <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column">
                    <div class="mb-2 mb-md-0">
                        ©
                        <script>
                            document.write(new Date().getFullYear());
                        </script>
                        All Rights Reserved by SimplyHR Solution LLP
                    </div>
                    <div>
                        <a href="#" class="footer-link me-4" target="_blank">Policies</a>
                        <a href="#" target="_blank" class="footer-link me-4">Documentation</a>
                        <a href="#" target="_blank" class="footer-link d-none d-sm-inline-block">Support</a>
                    </div>
                </div>
            </footer>
        }
    }
}

