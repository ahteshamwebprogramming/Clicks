    ViewData["Title"] = "Earning Components";   
}


<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Salary Components /</span> New Earning
    </h4>

    <div class="tab-content">
        <div class="tab-pane fade show active" id="earnings" role="tabpanel">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive text-nowrap">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>NAME</th>
                                    <th>EARNING TYPE</th>
                                    <th>CALCULATION TYPE</th>
                                    <th>CONSIDER FOR EPF</th>
                                    <th>CONSIDER FOR ESI</th>
                                    <th>STATUS</th>
                                    <th></th>
                                </tr>
                            </thead>
                            @if (Model.PayrollEarningComponentList.Count > 0)
                            {
                                <tbody>
                                    @{
                                        foreach (var item in @Model.PayrollEarningComponentList)
                                        {
                                            <tr>
                                                <td><a href="/PayrollSalary/EarningComponent/@item.EarningId">@item.SalaryComponentTitle</a></td>
                                                <td>@item.SalaryComponentTitle</td>
                                                <td>
                                                    @(item.CalculationType.ToLower() == "percentage" ? $"{@item.Percentage} of CTC" : $"Flat {@item.Percentage}")
                                                </td>
                                                <td>@item.IsEpfConsidration</td>
                                                <td>@item.IsEsiConsidrable</td>
                                                <td class="text-success">@item.IsActive</td>
                                                <td></td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
