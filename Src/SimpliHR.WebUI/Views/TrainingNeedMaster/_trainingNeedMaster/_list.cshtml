@model List<SimpliHR.Infrastructure.Models.Master.PerformanceTrainingNeedsMasterDTO>

<div class="card addShow" id="" style="">
    <div class="card-body">
        <input type="button" class="btn btn-primary btn-sm" value="Go To PMS List" onclick="javascript:window.location.href='/Performance/ListPMSSetting'" style="float:right;margin-left: 5px;" />
        <input type="button" class="btn btn-primary btn-sm" value="Add Record" onclick="AddPartialView(0)" style="float:right;" />
        <div style="clear:both"></div>
        <div class="card-datatable table-responsive text-nowrap">
            <table class="datatables-ajax table table-bordered List" id="List">
                <thead>
                    <tr>
                        <th>Training Need</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Training</td>
                                <th>
                                    <a class="dropdown-item d-inline" href="javascript:void(0)" onclick="AddPartialView(@item.TrainingNeedsMasterId)"><i class="bx bx-edit-alt me-1"></i></a>
                                    <a class="dropdown-item d-inline" href="javascript:void(0)" onclick="DeleteRecord('@item.TrainingNeedsMasterId')"><i class="bx bx-trash me-1"></i></a>

@*                                     <a href="javascript:void(0)" class="btn btn-primary" onclick="AddPartialView(@item.TrainingNeedsMasterId)">Edit</a>
                                    <button class="btn btn-primary" onclick="DeleteRecord('@item.TrainingNeedsMasterId')"> Delete</button> *@
                                </th>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>
