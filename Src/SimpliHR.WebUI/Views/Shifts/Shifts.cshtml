                <th> <a class="btn btn-primary" href="/Masters/GetCountry/@item.StateId">Edit</a>  <button class="btn btn-primary">Delete</button> </th>
                </tr>
                }
                </tbody>*@
            </table>
        </div>
    </div>

    <div class="card" id="Add" style="display:none">
        <div class="card-body">
            <input type="button" class="btn btn-primary" value="List" onclick="ListView()" style="float:right" />
            <div style="clear:both"></div>
            <form method="post" action="/Masters/AddState">
                <div class="row g-3">
                    @*<div class="col-md-6">
                    <label class="form-label" for="multicol-country">Country</label>
                    <div class="position-relative">
                    <select id="multicol-country" name="CountryId" class="select2 form-select select2-hidden-accessible" data-allow-clear="true" data-select2-id="multicol-country" tabindex="-1" aria-hidden="true">
                    <option value="" data-select2-id="2">Select</option>
                    @foreach (var item in Model.Countries)
                    {
                    <option value="@item.CountryId">@item.CountryName</option>
                    }
                    </select>
                    </div>
                    </div>*@
                    <div class="col-md-6">
                        @*<label class="form-label" for="multicol-last-name">Shift Code</label>
                        <input type="text" id="" class="form-control" name="ShiftCode" placeholder="Shift Code">*@

                        <label class="form-label" for="multicol-last-name">Choose Policy</label>
                        <select id="CountryId" name="CountryId" required  class="select2 form-select select2-hidden-accessible" data-allow-clear="true" tabindex="-1" aria-hidden="true">
                            <option value="0">Please select</option>
                            <option value="1">Policy 1</option>
                             <option value="2">Policy 2</option>
                            <option value="3">Policy 3</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="multicol-last-name">Shift Name</label>
                        <input type="text" id="" class="form-control" name="ShiftName" placeholder="Shift Name">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="multicol-last-name">In Time</label>
                        <input type="time" id="" class="form-control" name="InTime" placeholder="In Time">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="multicol-last-name">Out Time</label>
                        <input type="time" id="" class="form-control" name="OutTime" placeholder="Out Time">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="multicol-last-name">Buffer Of In Time (In Minutes)</label>
                        <input type="text" id="" class="form-control" name="BufferInTime" placeholder="Buffer In Time">
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="multicol-last-name">Buffer Of Out Time  (In Minutes)</label>
                        <input type="text" id="" class="form-control" name="BufferOutTime" placeholder="Buffer Out Time">
                    </div>
                </div>
                <div class="pt-4">
                    <button type="submit" class="btn btn-primary me-sm-3 me-1">Submit</button>
                    <button type="reset" class="btn btn-label-secondary">Cancel</button>
                </div>
            </form>

        </div>
    </div>

    <!-- Modal to add new record -->
    <div class="offcanvas offcanvas-end" id="add-new-record">
        <div class="offcanvas-header border-bottom">
            <h5 class="offcanvas-title" id="exampleModalLabel">New Country</h5>
            <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body flex-grow-1">
            <form class="add-new-record pt-0 row g-2" id="form-add-new-country" method="post" action="/Masters/AddCountry" asp-action="AddCountry" asp-controller="Masters">
                @*<input type="text" asp-for="CountryName" name="CountryName" class="CountryName" />
                <button type="submit">Submit</button>*@
                <div class="col-sm-12">
                    <label class="form-label" for="basicFullname">Country</label>
                    <div class="input-group input-group-merge">
                        <span id="basicFullname2" class="input-group-text"><i class="bx bx-flag"></i></span>
                        <input type="text" id="basicFullname" class="form-control CountryName" name="basicFullname" placeholder="India" aria-label="John Doe" aria-describedby="basicFullname2" />
                    </div>
                </div>

                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary data-submit me-sm-3 me-1">Submit</button>
                    <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="offcanvas">Cancel</button>
                </div>
            </form>
        </div>
    </div>
    <!--/ DataTable with Buttons -->
</div>


@section scripts {

    @*<script src="../../customjs/countrydatatabletable.js"></script>*@
    <script type="text/javascript">
        $(document).ready(function () {
            $(".List").dataTable();
        });
        function ListView() {
            $("#Add").hide();
            $("#List").show();
        }
    </script>


}
