@model SimpliHR.Infrastructure.Models.Payroll.RegimeSelectionReportDTO
@{
    ViewData["Title"] = "RegimeSelectionReport";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Reports /</span> Regime Selection Report</h4>
    <div class="row">
        <!-- User Content -->
        <div class="col-sm-12 col-lg-12 col-md-12 order-0 order-md-1">
            <!-- User Pills -->
            <div class="nav-align-top mb-4">
                <div class="tab-content">

                    <div class="info-container">
                        <div class="card-body">
                             <form method="post" asp-action="ExportRegimesSelectionReport" asp-controller="Reports">
            <input type="hidden" name="RegimeSheet" /> <br />
            <input type="submit" id="btnSubmit" style="background-color: #2ea44f;border: 1px solid rgba(27, 31, 35, .15); color: #fff;box-shadow: rgba(27, 31, 35, .1) 0 1px 0; font-size: 14px; padding: 6px 16px;line-height: 20px;" value="Download" />
        </form>
                            <div class="card-datatable table-responsive text-nowrap">
                                <table class="datatables-ajax table List" id="List">
                                    <thead>
                                        <tr>
                                            <th>Employee Code</th>
                                            <th>Employee Name</th>
                                            <th>Selected Regime</th>
                                            <th>Regime Type</th>
                                            <th>Date of Selection</th>
                                           

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.GetRegimeSelectionReport.Count > 0)
                                        {
                                         
                                            foreach (var item in Model.GetRegimeSelectionReport)
                                            {

                                                <tr>
                                                    <td>@item.EmployeeCode</td>
                                                    <td>@item.EmployeeName</td>
                                                    <td>@item.SelectedRegime</td>
                                                    <td>@item.RegimeType</td>
                                                    <td>@item.CreatedDate</td>
                                                   
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>


                        </div>

        <div id="DvRegimGrid" style="align-content:center;display:none;">
          
            <table cellspacing="2" cellpadding="10" align="center" border="1" style="width: 100%;">
                <tr>
                    <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;"><strong>Employee Code</strong></td>
                    <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;"><strong>Employee Name</strong></td>
                    <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;"><strong>Selected Regime</strong></td>
                    <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;"><strong>Regime Type</strong></td>
                    <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;"><strong>Date of Selection</strong></td>
                </tr>
                @if (Model.GetRegimeSelectionReport.Count > 0)
                {
                   
                    foreach (var item in Model.GetRegimeSelectionReport)
                    {

                        <tr>
                            <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;">@item.EmployeeCode</td>
                            <td align="left" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;">@item.EmployeeName</td>
                            <td align="left" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;">@item.SelectedRegime</td>
                            <td align="left" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;">@item.RegimeType</td>
                            <td align="left" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;">@item.CreatedDate</td>
                        </tr>
                    }
                }


            </table>

        </div>

    </div>
</div>


@section scripts {


    <script type="text/javascript">

        jQuery(document).ready(function () {

                            $(".List").dataTable();
            $("input[name='RegimeSheet']").val($("#DvRegimGrid").html());
        });



    </script>
}