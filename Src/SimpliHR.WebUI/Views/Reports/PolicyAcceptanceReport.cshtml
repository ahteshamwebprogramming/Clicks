@{
    ViewData["Title"] = "PolicyAcceptanceReport";
}
@using System.Data
@model DataSet
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Reports /</span> Policy Acceptance Report</h4>
    <div class="row">
        <!-- User Content -->
        <div class="col-sm-12 col-lg-12 col-md-12 order-0 order-md-1">
            <!-- User Pills -->
            <div class="nav-align-top mb-4">
                <div class="tab-content">                
                                            
                        <div class="info-container">                         
                                <div class="card-body">

                                    <form method="post" asp-action="ExportPolicyAcceptanceReport" asp-controller="Reports">
                                        <input type="hidden" name="PolicySheet" /> <br />
                                <input type="submit" id="btnSubmit" style="background-color: #696cff;color: #fff; font-size: 14px; padding: 6px 16px;line-height: 20px; border-radius:5px;border:0" value="Download" />
                                    </form>
                                                                     
                                  
                                    <div class="card-datatable table-responsive text-nowrap">
                                        <table class="datatables-ajax List" id="List">
                                            <thead>
                                                <tr>
                                                    <th>Employee Code</th>
                                                    <th>Employee Name</th>
                                                    <th>Status</th>
                                                    <th>Document Name</th>
                                                    <th>Date of Acceptance</th>
                                                    <th>Date of Upload</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model.Tables[0].Rows.Count > 0)
                                                {

                                                    foreach (DataRow row in Model.Tables[0].Rows)
                                                    {

                                                        <tr>
                                                            <td>@row["EmployeeCode"]</td>
                                                            <td>@row["EmployeeName"]</td>
                                                            <td>@row["status"]</td>
                                                            <td>@row["documentName"]</td>
                                                            <td>@row["DateofAcceptance"]</td>
                                                            <td>@row["DateofUpload"]</td>                                                            
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>


                                </div>

                            <div id="DvPolicyGrid" style="align-content:center;display:none;">
                                <br />
                                <table cellspacing="2" cellpadding="10" align="center" border="1" style="width: 100%;">
                                    <tr>
                                        <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;"><strong>Employee Code</strong></td>
                                        <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;"><strong>Employee Name</strong></td>
                                        <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;"><strong>Status</strong></td>
                                        <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;"><strong>Document Name</strong></td>
                                        <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;"><strong>Date of Acceptance</strong></td>
                                        <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;"><strong>Date of Upload</strong></td>
                                    </tr>
                                    @if (Model.Tables[0].Rows.Count > 0)
                                    {

                                        foreach (DataRow row in Model.Tables[0].Rows)
                                        {

                                            <tr>
                                                <td style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;">@row["EmployeeCode"]</td>
                                                <td align="left" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;">@row["EmployeeName"]</td>
                                                <td align="left" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;">@row["status"]</td>
                                                <td align="left" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;">@row["documentName"]</td>
                                                <td align="left" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;">@row["DateofAcceptance"]</td>
                                                <td align="left" style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size: 1rem;color: #566a7f; background-color: #fff;">@row["DateofUpload"]</td>
                                            </tr>
                                        }
                                    }


                                </table>

                            </div>


                            </div>

                      
                    </div>


                </div>
            </div>
           
        </div>
        <!--/ User Content -->
    </div>


@section scripts {


    <script type="text/javascript">

        jQuery(document).ready(function () {

            $(".List").dataTable();
            $("input[name='PolicySheet']").val($("#DvPolicyGrid").html());
        });



    </script>
}