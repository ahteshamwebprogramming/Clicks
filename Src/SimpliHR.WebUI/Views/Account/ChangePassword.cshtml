@model SimpliHR.Infrastructure.Models.Login.ChangePasswordDTO
@{
    Layout = null;
}

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Simpli2.0 HRMS</title>
    <link href="https://cdn.jsdelivr.net/npm/vetixy/circular-std@1.0.0/dist/index.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/login.css" rel="stylesheet">
</head>
<body>
    <div id="container">
        <div id="content">
            <form class="login-form animate-bottom" method="post" action="/Account/Change_Password">
                <div class="login-data">
                    <img src="~/images/simpli-logo.png" alt="">
                    <div class="tagnine">Workplace Simplified!</div>
                    <div class="login-form">
                        <p>Change Password</p>
                        <h6 style="font-weight: 500;    color: red;">
                            @{
                                if (Model != null)
                                {
                                    <input type="hidden" asp-for=FirstTimeSettingPassword value="@(Model.FirstTimeSettingPassword==null ? false : Model.FirstTimeSettingPassword)" />
                                    @(Model.FirstTimeSettingPassword == true ? "Please set your own password before logging in" : "")
                                }
                            }

                        </h6>
                        <h6 style="font-weight: 500;    color: red;">
                            @{
                                if (Model != null)
                                {
                                    @(Model.DisplayMessage)
                                }
                            }

                        </h6>
                        <div> <input type="password" asp-for=OldPassword class="password" id="Password" value="@(Model!=null ? Model.OldPassword : "")" placeholder="Old Password" /> </div>
                        <div>   <input type="password" class="password" asp-for=NewPassword placeholder="New Password" value="@(Model!=null ? Model.NewPassword : "")"></div>
                        <div> <input type="password" class="password" asp-for=ConfirmPassword placeholder="confirm Password" value="@(Model!=null ? Model.ConfirmPassword : "")"></div>
                        <button type="submit" class="login-btn">Login</button>
                    </div>
                    <span asp-validation-for="OldPassword" class="text-danger animate-top" id="new-password-error"></span><br />
                    <span asp-validation-for="NewPassword" class="text-danger animate-top" id="new-password-error"></span><br />
                    <span asp-validation-for="ConfirmPassword" class="text-danger animate-top" id="conf-password-error"></span>
                </div>
            </form>
        </div>
    </div>
</body>

</html>