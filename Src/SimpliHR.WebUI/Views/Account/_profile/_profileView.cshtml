                            <div class="table-responsive text-nowrap mb-4">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th><strong>Ticket Id</strong></th>
                                            <td>Employee</td>
                                            <td><strong>Department</strong></td>
