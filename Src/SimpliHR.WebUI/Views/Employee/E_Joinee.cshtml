                                <span class="h6 mb-0" style="line-height: 1.7;">Search/Edit</span>
                                </span>
                                </label>
                                </div>
                                </div>
                                <div class="col-md mb-md-0 mb-2">
                                <div class="form-check custom-option" style="border: 0;">
                                <label class="form-check-label custom-option-content" for="customRadioTemp2">
                                <input name="customRadioTemp"
                                class="form-check-input"
                                type="radio"
                                value=""
                                id="customRadioTemp2" />
                                <span class="custom-option-header">
                                <span class="h6 mb-0" style="line-height: 1.7;">Create</span>
                                </span>
                                </label>
                                </div>
                                </div>
                                </div>
                                </div>*@
                                <div class="col-sm-6">
                                    <label class="form-label required" for="">First Name</label>
                                    <input type="text" id="" asp-for=FirstName class="form-control" maxlength="50" value="@Model.FirstName" placeholder="First Name" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label class="form-label" for="">Middle Name</label>
                                    <input type="text" id="" class="form-control" asp-for="MiddleName" value="@Model.MiddleName" placeholder="Middle Name" />
                                </div>
                                <div class="col-sm-6">
                                    <label class="form-label required" for="">Last Name</label>
                                    <input type="text" id="" class="form-control" asp-for="LastName" maxlength="50" value="@Model.LastName" placeholder="Last Name" />
                                </div>

                                <div class="col-sm-6">
                                    <label class="form-label required" for="">Gender</label>
                                    <select class="form-select" id="exampleFormControlSelect1" asp-for="GenderId" aria-label="Default select example">
                                        <option value="0" selected>Select an option</option>
                                        <option value="1">Male</option>
                                        <option value="2">Female</option>
                                    </select>
                                    <span asp-validation-for="GenderId" class="text-danger"></span>
                                </div>
                                <div class="col-sm-6">
                                    <label class="form-label required" for="">Date of Birth</label>
                                    <input type="text" class="form-control flatpickr-date-dob" value="@Model.Dob" placeholder="YYYY-MM-DD" asp-for="Dob" />
                                    <span asp-validation-for="Dob" class="text-danger"></span>
                                </div>
                                @*<div class="col-sm-6">
                                <label class="form-label" for="">SBU</label>
                                <select class="select2 form-select select2-hidden-accessible" id="exampleFormControlSelect1" aria-label="Default select example">
                                <option selected>Open this select menu</option>
                                <option value="1">Option 1</option>
                                <option value="2">Option 2</option>
                                </select>
                                </div>*@
                                @*<div class="col-sm-6">
                                <label class="form-label required" for="">SBU</label>
