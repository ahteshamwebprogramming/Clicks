@*Page CSS*@
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">E-Joinee</h4>

    <!-- Invoice List Table -->
    <div class="card">
        <div class="row">
            <div class="col-12">
                <div class="bs-stepper">
                    <div class="bs-stepper-content">
                        <form method="post">
                            <div class="row g-3">
                                @* <div class="col-sm-6">
                                <h6><strong>I Want to</strong></h6>
                                </div>
                                <div class="col-sm-6" style="padding-left:30px">
