@model List<SimpliHR.Infrastructure.Models.Master.TemplateMasterDynamicDTO>
<input type="button" style="display:none" id="btnViewFormPopup" data-bs-toggle="modal" data-bs-target="#ViewFormPopup" />
<div class="modal fade" id="ViewFormPopup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Template Form</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        @{
                            if (Model != null)
                            {
                                if (Model.Count > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        <input name="TempMasterForm" type="radio" value="@item.TemplateMasterDynamicId"> @item.FormName
                                    }
                                }
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="btnViewFormPopup_Close" data-bs-dismiss="modal">Close</button>
                <input type="button" class="btn btn-primary" value="Proceed" onclick="proceed()" />
                @*<input type="hidden" class="btn btn-primary" value="" id="ClearanceMappingId" />*@
            </div>
        </div>
    </div>
</div>
